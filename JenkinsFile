pipeline {
    agent any
        options {
    ansiColor('xterm')
  }
    stages {
        stage('Build') {
            agent {
                docker {
                    image 'rafaelsuzano/work:latest'
                    // Run the container on the node specified at the
                    // top-level of the Pipeline, in the same workspace,
                    // rather than on a new node entirely:
                    reuseNode true
                }
            }
            steps {
                 sh 'RUN useradd -m bot'
                 sh 'USER bot'
                 sh 'apt-get update &&apt-get install -y python3 && apt-get install -y python3-pip && pip install trcli'
                 sh 'npm install'
                 sh 'npm run teste:Ventes_Achats'
            }
        }
    }
}
