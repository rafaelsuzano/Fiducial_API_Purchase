pipeline {
    options {
    ansiColor('xterm')
  }
    
    agent {
        docker { image 'rafaelsuzano/work:latest' }
    }
    stages {
        stage('Dependencias') {
            steps {
                sh '''
                apt-get install -y python3-pip 
                 pip install trcli
                '''
            }
        }
        stage('Test') {
            steps {
                sh 'npm run teste:Ventes_Achats'
            }
        }
    
    }
}