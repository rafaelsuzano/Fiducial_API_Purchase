pipeline {
    agent {
        docker { image 'rafaelsuzano/work:latest' }
    }
  options {
    ansiColor('xterm')
  }

   stages {
       
         stage('Clear') {
           steps {
       
               sh 'npm run report:delete'
              
           }
       }
       
         stage('Dependencies') {
           steps {
       
              sh 'npx install -g cypress --unsafe-perm --silent'
              
           }
       }
         stage('Tests API Ventes' ) {
           steps {
                sh './Executa_Ventes_Teste.sh'
   
 
    }
       
 }  
       


 }



}


