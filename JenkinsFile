pipeline {
  agent any

  options {
    ansiColor('xterm')
  }

   stages {
       
        stage('Clear') {
           steps {
       
               sh 'npm run report:delete'
              
           }
       }
       
       stage('Dependencies') {
           steps {
       
               sh 'npx cypress install --force'
              
           }
       }
        stage('e2e Tests') {
           steps {
               sh 'npx cypress run --config video=false,screenshotOnRunFailure=false --reporter junit --reporter-options "mochaFile=reports/TEST-[hash].xml"'

  
    }
      post {
    always {
            sh 'junitparser merge --glob "reports/TEST-*" "reports/junit-report.xml"'

    }
  }      
 }  
        stage('Send Report') {
          steps {
                sh 'echo ok'

  
    }
      post {
    always {
            sh 'trcli -y -h https://facilia.testrail.io/  --project "Facilia QAE" --username  rafael.cruz-exterieur@fiducial.net  --password Suz@no30  parse_junit --title "Cypress Automated Test Run" -f "./reports/junit-report.xml"'

    }
  }      
 } 



}
}
