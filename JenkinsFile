pipeline {
    agent any
        options {
    ansiColor('xterm')
  }
    stages {
        stage('Test') {
            agent {
                docker {
                    image 'rafaelsuzano/work:latest'
                    args '-u root:root'
                    reuseNode true
                }
            }
            steps {
                 sh 'apt-get install git'
                 sh 'npm i --unsafe-perm'
                 sh 'npm install --save-dev cypress'
                 sh 'pip install trcli'
                 sh './Executa_Teste.sh'
            }
        }
    }
}
