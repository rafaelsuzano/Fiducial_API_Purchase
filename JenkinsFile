pipeline {
    agent any
        options {
    ansiColor('xterm')
  }
    stages {
        stage('Test') {
            agent {
                docker {
                    image 'rafaelsuzano/work:latest'
                    args '-u root:root'
                    reuseNode true
                }
            }
            steps {
                sh "mkdir -p /root/.cache/Cypress"
                 sh 'npx cypress install --force'
                 sh './Executa_Teste.sh'
            }
        }
    }
}
